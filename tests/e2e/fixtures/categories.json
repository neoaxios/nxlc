  "test_configuration": {
    "parallel_execution": true,
    "max_workers": 4,
    "timeout_per_fixture_ms": 1000,
    "retry_on_failure": true,
    "max_retries": 2,
    "collect_coverage": true,
    "generate_reports": true,
    "report_formats": ["json", "html", "junit"],
    "fail_fast": false
